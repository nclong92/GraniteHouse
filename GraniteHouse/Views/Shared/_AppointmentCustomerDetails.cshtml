@model GraniteHouse.Models.Appointments

<h3 class="text-success">
    Appointment Details
</h3>

<div class="container border rounded" style="background-color: aliceblue">
    <div class="row">
        <div class="col-2" style="padding: 15px;">
            Full Name
        </div>
        <div class="col-3" style="padding: 15px;">
            <input asp-for="CustomerName" class="form-control" readonly />
        </div>
        @*<div class="col-2" style="padding: 15px;">

        </div>*@
        <div class="col-2" style="padding: 15px;">
            Email
        </div>
        <div class="col-3" style="padding: 15px;">
            <input asp-for="CustomerEmail" class="form-control" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-2" style="padding: 15px;">
            Phone Number
        </div>
        <div class="col-3" style="padding: 15px;">
            <input asp-for="CustomerPhoneNumber" class="form-control" readonly />
        </div>
        @*<div class="col-2" style="padding: 15px;">

        </div>*@
        <div class="col-2" style="padding: 15px;">
            Appointment Date
        </div>
        <div class="col-3" style="padding: 15px;">
            <input asp-for="AppointmentDate" class="form-control" readonly />
        </div>
    </div>
</div>
