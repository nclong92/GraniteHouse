@model GraniteHouse.Models.SpecialTags
@{
    ViewData["Title"] = "Delete";
}

<br /><br />
<div class="row">
    <div class="col-12">
        <h2 class="text-info">Special Tag Delete</h2>
    </div>
</div>
<br />
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row align-items-center">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="SpecialTags" asp-route-id="@Model.Id" value="Delete" />
            <a asp-action="Index" asp-controller="SpecialTags" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>