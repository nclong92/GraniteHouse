@model IEnumerable<GraniteHouse.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" asp-controller="SpecialTags" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Special Tag</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <table class="table table-striped border">
            <thead>
                <tr class="table-info">
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

